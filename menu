package menu;

import dao.ClienteDAO;
import modelos.Cliente;
import java.util.List;
import java.util.Scanner;

public class MenuCliente {

    private ClienteDAO clienteDAO = new ClienteDAO();
    private Scanner sc = new Scanner(System.in);

    public void mostrarMenu() {
        int opcion;
        do {
            System.out.println("\n===== MEN칔 CLIENTE =====");
            System.out.println("1. Agregar cliente");
            System.out.println("2. Mostrar clientes");
            System.out.println("3. Actualizar cliente");
            System.out.println("4. Eliminar cliente");
            System.out.println("0. Volver");
            System.out.print("Seleccione una opci칩n: ");
            opcion = sc.nextInt();
            sc.nextLine(); // limpiar

            switch (opcion) {
                case 1 -> agregar();
                case 2 -> mostrar();
                case 3 -> actualizar();
                case 4 -> eliminar();
                case 0 -> System.out.println("Volviendo al men칰 principal...");
                default -> System.out.println("Opci칩n inv치lida");
            }
        } while (opcion != 0);
    }

    private void agregar() {
        System.out.print("Nombre: ");
        String nombre = sc.nextLine();
        System.out.print("Email: ");
        String email = sc.nextLine();
        System.out.print("Contrase침a: ");
        String contrasenia = sc.nextLine();
        clienteDAO.insertar(new Cliente(0, nombre, email, contrasenia));
    }

    private void mostrar() {
        List<Cliente> lista = clienteDAO.listar();
        System.out.println("\n游늶 LISTA DE CLIENTES:");
        lista.forEach(System.out::println);
    }

    private void actualizar() {
        System.out.print("ID del cliente a actualizar: ");
        int id = sc.nextInt(); sc.nextLine();
        System.out.print("Nuevo nombre: ");
        String nombre = sc.nextLine();
        System.out.print("Nuevo email: ");
        String email = sc.nextLine();
        System.out.print("Nueva contrase침a: ");
        String contrasenia = sc.nextLine();
        clienteDAO.actualizar(new Cliente(id, nombre, email, contrasenia));
    }

    private void eliminar() {
        System.out.print("ID del cliente a eliminar: ");
        int id = sc.nextInt();
        clienteDAO.eliminar(id);
    }
}



package menu;

import dao.DetallePedidoDAO;
import modelos.DetallePedido;
import java.util.List;
import java.util.Scanner;

public class MenuDetalle {

	// Se crea un objeto (instancia) de la clase DetallePedidoDAO para poder
	// acceder a sus m칠todos (insertar, eliminar, listar, etc.) desde esta clase.
	// Esto permite que, por ejemplo, al eliminar un pedido, tambi칠n se eliminen sus detalles.
    private DetallePedidoDAO detalleDAO = new DetallePedidoDAO();
    private Scanner sc = new Scanner(System.in);

    public void mostrarMenu() {
        int opcion;
        do {
            System.out.println("\n===== MEN칔 DETALLE PEDIDO =====");
            System.out.println("1. Agregar detalle");
            System.out.println("2. Mostrar detalles");
            System.out.println("3. Actualizar detalle");
            System.out.println("4. Eliminar detalle");
            System.out.println("0. Volver");
            System.out.print("Seleccione una opci칩n: ");
            opcion = sc.nextInt();
            sc.nextLine();

            switch (opcion) {
                case 1 -> agregar();
                case 2 -> mostrar();
                case 3 -> actualizar();
                case 4 -> eliminar();
                case 0 -> System.out.println("Volviendo al men칰 principal...");
                default -> System.out.println("Opci칩n inv치lida");
            }
        } while (opcion != 0);
    }

    private void agregar() {
        System.out.print("ID Pedido: ");
        int idPedido = sc.nextInt();
        System.out.print("ID Producto: ");
        int idProducto = sc.nextInt();
        System.out.print("Cantidad: ");
        int cantidad = sc.nextInt();
        System.out.print("Total: ");
        double total = sc.nextDouble();
        detalleDAO.insertar(new DetallePedido(0, idPedido, idProducto, cantidad, total));
    }

    private void mostrar() {
        List<DetallePedido> lista = detalleDAO.listar();
        System.out.println("\n游늶 LISTA DE DETALLES DE PEDIDOS:");
        lista.forEach(System.out::println);
    }

    private void actualizar() {
        System.out.print("ID del detalle a actualizar: ");
        int id = sc.nextInt();
        System.out.print("Nuevo ID Pedido: ");
        int idPedido = sc.nextInt();
        System.out.print("Nuevo ID Producto: ");
        int idProducto = sc.nextInt();
        System.out.print("Nueva cantidad: ");
        int cantidad = sc.nextInt();
        System.out.print("Nuevo total: ");
        double total = sc.nextDouble();
        detalleDAO.actualizar(new DetallePedido(id, idPedido, idProducto, cantidad, total));
    }

    private void eliminar() {
        System.out.print("ID del detalle a eliminar: ");
        int id = sc.nextInt();
        detalleDAO.eliminar(id);
    }
}






package menu;

import dao.PedidoDAO;
import modelos.Pedido;
import java.util.List;
import java.util.Scanner;

public class MenuPedido {

	// Se crea un objeto (instancia) de la clase PedidoDAO para poder acceder
	// a sus m칠todos (insertar, actualizar, eliminar, listar, etc.) desde esta clase.
	// Esto permite gestionar los pedidos dentro de otra clase que los utilice, 
	// como un gestor o controlador del sistema.
    private PedidoDAO pedidoDAO = new PedidoDAO();
    private Scanner sc = new Scanner(System.in);

    public void mostrarMenu() {
        int opcion;
        do {
            System.out.println("\n===== MEN칔 PEDIDO =====");
            System.out.println("1. Agregar pedido");
            System.out.println("2. Mostrar pedidos");
            System.out.println("3. Actualizar pedido");
            System.out.println("4. Eliminar pedido");
            System.out.println("0. Volver");
            System.out.print("Seleccione una opci칩n: ");
            opcion = sc.nextInt();
            sc.nextLine(); // limpiar

            switch (opcion) {
                case 1 -> agregar();
                case 2 -> mostrar();
                case 3 -> actualizar();
                case 4 -> eliminar();
                case 0 -> System.out.println("Volviendo al men칰 principal...");
                default -> System.out.println("Opci칩n inv치lida");
            }
        } while (opcion != 0);
    }

    private void agregar() {
        System.out.print("Fecha (YYYY-MM-DD): ");
        String fecha = sc.nextLine();
        System.out.print("Estado: ");
        String estado = sc.nextLine();
        System.out.print("ID Cliente: ");
        int idCliente = sc.nextInt();
        pedidoDAO.insertar(new Pedido(0, fecha, estado, idCliente));
    }

    private void mostrar() {
        List<Pedido> lista = pedidoDAO.listar();
        System.out.println("\n游늶 LISTA DE PEDIDOS:");
        lista.forEach(System.out::println);
    }

    private void actualizar() {
        System.out.print("ID del pedido a actualizar: ");
        int id = sc.nextInt();
        sc.nextLine();
        System.out.print("Nueva fecha (YYYY-MM-DD): ");
        String fecha = sc.nextLine();
        System.out.print("Nuevo estado: ");
        String estado = sc.nextLine();
        System.out.print("Nuevo ID Cliente: ");
        int idCliente = sc.nextInt();
        pedidoDAO.actualizar(new Pedido(id, fecha, estado, idCliente));
    }

    private void eliminar() {
        System.out.print("ID del pedido a eliminar: ");
        int id = sc.nextInt();
        pedidoDAO.eliminar(id);
    }
}



package menu;
import dao.ProductoDAO;
import modelos.Producto;
import java.util.List;
import java.util.Scanner;

public class MenuProducto {

    private ProductoDAO productoDAO = new ProductoDAO();
    private Scanner sc = new Scanner(System.in);

    public void mostrarMenu() {
        int opcion;
        do {
            System.out.println("\n===== MEN칔 PRODUCTO =====");
            System.out.println("1. Agregar producto");
            System.out.println("2. Mostrar productos");
            System.out.println("3. Actualizar producto");
            System.out.println("4. Eliminar producto");
            System.out.println("0. Volver");
            System.out.print("Seleccione una opci칩n: ");
            opcion = sc.nextInt();
            sc.nextLine(); // limpiar buffer

            switch (opcion) {
                case 1 -> agregar();
                case 2 -> mostrar();
                case 3 -> actualizar();
                case 4 -> eliminar();
                case 0 -> System.out.println("Volviendo al men칰 principal...");
                default -> System.out.println("Opci칩n inv치lida");
            }
        } while (opcion != 0);
    }

    private void agregar() {
        System.out.print("Nombre: ");
        String nombre = sc.nextLine();
        System.out.print("Descripci칩n: ");
        String descripcion = sc.nextLine();
        System.out.print("Precio: ");
        double precio = sc.nextDouble();
        System.out.print("Stock: ");
        int stock = sc.nextInt();
        productoDAO.insertar(new Producto(0, nombre, descripcion, precio, stock));
    }

    private void mostrar() {
        List<Producto> lista = productoDAO.listar();
        System.out.println("\n游늶 LISTA DE PRODUCTOS:");
        lista.forEach(System.out::println);
    }

    private void actualizar() {
        System.out.print("ID del producto a actualizar: ");
        int id = sc.nextInt(); sc.nextLine();
        System.out.print("Nuevo nombre: ");
        String nombre = sc.nextLine();
        System.out.print("Nueva descripci칩n: ");
        String descripcion = sc.nextLine();
        System.out.print("Nuevo precio: ");
        double precio = sc.nextDouble();
        System.out.print("Nuevo stock: ");
        int stock = sc.nextInt();
        productoDAO.actualizar(new Producto(id, nombre, descripcion, precio, stock));
    }

    private void eliminar() {
        System.out.print("ID del producto a eliminar: ");
        int id = sc.nextInt();
        productoDAO.eliminar(id);
    }
}











